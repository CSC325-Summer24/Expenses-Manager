<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/20" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.csc325_firebase_webview_auth.view.ExpenseViewController">
    <children>
        <Label layoutX="14.0" layoutY="14.0" text="Expenses">
            <font>
                <Font size="20.0" />
            </font>
        </Label>
        <TableView fx:id="expensesTable" layoutX="14.0" layoutY="42.0" prefHeight="400.0" prefWidth="570.0">
            <columns>
                <TableColumn fx:id="descriptionColumn" prefWidth="200.0" text="Description" />
                <TableColumn fx:id="dateColumn" prefWidth="200.0" text="Date" />
                <TableColumn fx:id="amountColumn" prefWidth="100.0" text="Amount" />
            </columns>
        </TableView>
        <Button fx:id="closeButton" layoutX="500.0" layoutY="450.0" mnemonicParsing="false" text="Close" onAction="#handleCloseButtonAction" />
        <Button fx:id="editButton" layoutX="370.0" layoutY="450.0" mnemonicParsing="false" text="Edit" onAction="#handleEditButtonAction" />
        <Button fx:id="deleteButton" layoutX="250.0" layoutY="450.0" mnemonicParsing="false" text="Delete" onAction="#handleDeleteButtonAction" />
    </children>
</AnchorPane>


